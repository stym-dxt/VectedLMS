# Copy to .env and set production values. Do not commit .env.

# Database (use a port not used by other apps on the server, e.g. 5434)
POSTGRES_USER=vectedlms
POSTGRES_PASSWORD=change-me
POSTGRES_DB=vectedlms
POSTGRES_PORT=5434

# Backend
SECRET_KEY=generate-a-long-random-secret-for-jwt
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
CORS_ORIGINS=https://students.vectorskillaacademy.com
ENVIRONMENT=production
BACKEND_PORT=8005

# Frontend (port only; Nginx will proxy to this)
VITE_API_URL=https://students.vectorskillaacademy.com
FRONTEND_PORT=3005

# Firebase Phone OTP â€“ required for "Login with OTP". Set these and rebuild frontend (docker compose build --no-cache frontend).
# Get values from Firebase Console > Project settings > General / Your apps
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abc

# Backend: path to Firebase service account JSON (Project settings > Service accounts > Generate new private key)
# Same file can be used for Google Calendar sync if the service account has Calendar API access.
GOOGLE_APPLICATION_CREDENTIALS=

# Google Calendar sync: live class schedule is synced from this calendar into the LMS.
# 1) Enable Google Calendar API in the same GCP project as the service account.
# 2) Share the calendar with the service account email (e.g. xxx@project.iam.gserviceaccount.com) as Viewer.
# 3) Set GOOGLE_CALENDAR_ID to the calendar ID (Settings > Integrate calendar > Calendar ID).
GOOGLE_CALENDAR_ID=
# Course ID to assign to synced events (default 1)
GOOGLE_CALENDAR_DEFAULT_COURSE_ID=1
